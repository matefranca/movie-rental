            <td>
                @Html.DisplayFor(modelItem => item.ID_Cliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ID_Filme)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataLocacao)
            </td>
